@model MusicShop.DataAccess.ViewModels.ManufacturerVM
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary">Manufacturer Delete</h2>
			<hr/>
		</div>
		<input type="hidden" asp-for="@Model.Manufacturer.Id" />
		<div asp-validation-summary=All></div>
		<div class="row mb-3">
			<label asp-for="@Model.Manufacturer.Name"></label>
			<input disabled asp-for="@Model.Manufacturer.Name" class="form-control" />
			<span asp-validation-for="@Model.Manufacturer.Name" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="@Model.Manufacturer.Email"></label>
			<input disabled asp-for="@Model.Manufacturer.Email" class="form-control" />
			<span asp-validation-for="@Model.Manufacturer.Email" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="@Model.Manufacturer.PhoneNumber">Phone no</label>
			<input disabled asp-for="@Model.Manufacturer.PhoneNumber" class="form-control" />
			<span asp-validation-for="@Model.Manufacturer.PhoneNumber" class="text-danger"></span>
		</div>
		<button class="btn btn-danger" type="submit">Delete</button>
	</div>
	<a class="btn btn-info" role="button" asp-action="Index" asp-controller="Manufacturer">Back To Manufacturers</a>
</form>
@section scripts{
	@{
		<partinal name="_ValidationScriptsPartial"/>
	}
}