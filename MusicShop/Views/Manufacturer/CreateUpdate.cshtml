@model MusicShop.DataAccess.ViewModels.ManufacturerVM
<form method="post" asp-action="CreateUpdate">
	<input type="hidden" asp-for="Manufacturer.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary">
				@((Model.Manufacturer == null || Model.Manufacturer.Id == 0) ? "Create" : "Update") Manufacturer</h2>
				<hr/>
		</div>
		<div asp-validation-summary=All></div>
		<div class="row mb-3">
			<label asp-for="Manufacturer.Name"></label>
			<input asp-for="Manufacturer.Name" class="form-control" />
			<span asp-validation-for="Manufacturer.Name" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Manufacturer.Email"></label>
			<input asp-for="Manufacturer.Email" class="form-control" />
			<span asp-validation-for="Manufacturer.Email" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Manufacturer.PhoneNumber"></label>
			<input asp-for="Manufacturer.PhoneNumber" class="form-control" />
			<span asp-validation-for="Manufacturer.PhoneNumber" class="text-danger"></span>
		</div>
		@if (Model.Manufacturer == null || Model.Manufacturer.Id == 0)
		{
				<button class="btn btn-primary" type="submit">Create</button>
		}
		else
		{
				<button class="btn btn-primary"type="submit">Update</button>
		}
	</div>
	<a class="btn btn-info" role="button" asp-action="Index" asp-controller="Manufacturer">Back To Manufacturers</a>

</form>
@section scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}