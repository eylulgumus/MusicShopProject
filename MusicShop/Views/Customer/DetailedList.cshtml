@model MusicShop.DataAccess.ViewModels.CustomerVM
@{
    ViewData["Title"] = "DetailedList";
}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Customer Details</h2>
        </div>
        <div class="col-3 text-end">
            <a class="btn btn-primary" asp-action="Index" asp-controller="Customer"><i class="bi bi-plus-circle"></i>&nbsp;Customers</a>
        </div>
        <div class="col-3 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Customer"><i class="bi bi-plus-circle"></i>&nbsp;Create new Customer</a>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Customer Email
            </th>
            <th>
                Customer Password
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.customers)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Password
                </td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Customer" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Customer" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            searching: true,
            paging: true,
            ordering: true
        });
    });
</script>
