@model MusicShop.DataAccess.ViewModels.NstrumentVM
<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
	<input type="hidden" asp-for="Instrument.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary">@((Model.Instrument==null||Model.Instrument.Id==0)?"Create":"Update") Instrument</h2>
				<hr/>
		</div>
		<div asp-validation-summary=All></div>
		<div class="row mb-3">
			<label asp-for="Instrument.ManufacturerId">Manufacturer Name</label>
			<select asp-for="Instrument.ManufacturerId" asp-items="@Model.manufacturers">
				<option selected disabled>--Select Manufacturers</option>
			</select>
			<span asp-validation-for="Instrument.ManufacturerId" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Instrument.Name"></label>
			<input asp-for="Instrument.Name" class="form-control" />
			<span asp-validation-for="Instrument.Name" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Instrument.Price"></label>
			<input asp-for="Instrument.Price" class="form-control" />
			<span asp-validation-for="Instrument.Price" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Instrument.QuantInStock"></label>
			<input asp-for="Instrument.QuantInStock" class="form-control" />
			<span asp-validation-for="Instrument.QuantInStock" class="text-danger"></span>
		</div>
	
	@if (Model.Instrument == null || Model.Instrument.Id == 0)
	{
		<button class="btn btn-primary" type="submit">Create</button>
	}
	else
	{
		<button class="btn btn-primary" type="submit">Update</button>
	}
	</div>
	<a class="btn btn-info" role="button" asp-action="Index" asp-controller="Nstrument">Back To Instruments</a>
</form>
@section scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
