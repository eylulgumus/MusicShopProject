@model MusicShop.DataAccess.ViewModels.NstrumentVM
@{
    ViewData["Title"] = "Index";
}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Instruments</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Nstrument"><i class="bi bi-plus-circle"></i>&nbsp;Create new Instrument</a>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Instrument Name
            </th>
            <th>
                Instrument Price
            </th>
            <th>
                Instrument QuantInStock
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.instruments)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.QuantInStock
                </td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Nstrument" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Nstrument" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
		}
    </tbody>
</table>
<script>
    $(document).ready(function() {
        $('#myTable').DataTable({
            searching: true,
            paging: true,
            ordering: true
        });
    });
</script>
