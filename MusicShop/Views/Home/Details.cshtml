@model MusicShop.DataAccess.ViewModels.NstrumentVM
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary">Instrument</h2>
			<hr />
		</div>
		<input type="hidden" asp-for="@Model.Instrument.Id" />
		<div asp-asp-validation-summary=All></div>	
		<div class="row mb-3">
			<label asp-for="@Model.Instrument.Name"></label>
			<input disabled asp-for="@Model.Instrument.Name" class="form-control" />
		</div>		
		<div class="row mb-3">
			<label asp-for="@Model.Instrument.Price"></label>
			<input disabled asp-for="@Model.Instrument.Price" class="form-control" />
		</div>
		<div class="row mb-3">
			<label asp-for="@Model.Instrument.QuantInStock"></label>
			<input disabled asp-for="@Model.Instrument.QuantInStock" class="form-control" />
		</div>
		<div class="row mb-3">
			<label asp-for="@Model.Instrument.ManufacturerId"></label>
			<input disabled asp-for="@Model.Instrument.ManufacturerId" class="form-control" />
		</div>
	</div>
	<a class="btn btn-info" role="button" asp-action="Index" asp-controller="Home">Back to Home</a>
</form>
@section scripts{
	@{
		<partinal name="_ValidationScriptsPartial" />
	}
}