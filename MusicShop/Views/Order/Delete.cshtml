@model MusicShop.DataAccess.ViewModels.OrderVM
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary">Order Delete</h2>
			<hr />
		</div>
		<input type="hidden" asp-for="@Model.Order.Id" />
		<div asp-validation-summary=All></div>
		<div class="row mb-3">
			<label asp-for="@Model.Order.Id"></label>
			<input disabled asp-for="@Model.Order.Id" class="form-control" />
			<span asp-validation-for="@Model.Order.Id" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="@Model.Order.Quantity"></label>
			<input disabled asp-for="@Model.Order.Quantity" class="form-control" />
			<span asp-validation-for="@Model.Order.Quantity" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="@Model.Order.CustomerId"></label>
			<input disabled asp-for="@Model.Order.CustomerId" class="form-control" />
			<span asp-validation-for="@Model.Order.CustomerId" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="@Model.Order.OrderDate"></label>
			<input disabled asp-for="@Model.Order.OrderDate" class="form-control" />
			<span asp-validation-for="@Model.Order.OrderDate" class="text-danger" ></span>
		</div>

		<button class="btn btn-danger" type="submit">Delete</button>
	</div>
	<a class="btn btn-info" role="button" asp-action="DetailedList" asp-controller="Order">Back To Order Details</a>
</form>
@section scripts{
	@{
		<partinal name="_ValidationScriptsPartial" />
	}
}