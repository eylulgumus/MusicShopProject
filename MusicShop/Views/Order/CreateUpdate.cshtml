@model MusicShop.DataAccess.ViewModels.OrderVM
<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
	<input type="hidden" asp-for="Order.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary">@((Model.Order == null || Model.Order.Id == 0) ? "Create" : "Update") Order</h2>
			<hr />
		</div>
		<div asp-validation-summary=All></div>		
		<div class="row mb-3">
			<label asp-for="Order.NtsrumentId">Instrument Name</label>
			<select asp-for="Order.NtsrumentId" asp-items="@Model.instruments">
				<option selected disabled>--Select Instruments</option>
			</select>
			<span asp-validation-for="Order.NtsrumentId" class="text-danger"></span>
		</div>		
		<div class="row mb-3">
			<label asp-for="Order.CustomerId">Customer Name</label>
			<select asp-for="Order.CustomerId" asp-items="@Model.customers">
				<option selected disabled>--Select Customers</option>
			</select>
			<span asp-validation-for="Order.CustomerId" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Order.Quantity"></label>
			<input asp-for="Order.Quantity" class="form-control" />
			<span asp-validation-for="Order.Quantity" class="text-danger"></span>
		</div>

	
	@if (Model.Order == null || Model.Order.Id == 0)
	{
		<button class="btn btn-primary" type="submit">Create</button>
	}
	else
	{
		<button class="btn btn-primary" type="submit">Update</button>
	}
	</div>
	<a class="btn btn-info" role="button" asp-action="DetailedList" asp-controller="Order">Back To Order Details</a>
</form>
@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
